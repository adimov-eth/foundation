# Neo4j Configuration for Real Memory
# Uncomment and configure to use Neo4j-backed memory instead of file-based storage

# Neo4j connection
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# Memory configuration
MEMORY_UPDATE_THRESHOLD=100  # Regenerate manifest after N updates
MEMORY_CACHE_TTL_MS=30000    # Cache manifest for 30 seconds

# Development mode
DEV_MODE=true